{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"allowJs": true,
		"outDir": "dist",
		"moduleResolution": "nodenext",
		"sourceRoot": "src",
		"baseUrl": "src",
		"rootDir": "src",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"paths": {
			"#classes/*": ["classes/*"],
			"#handlers/*": ["classes/Handlers/*"],
			"#functions/*": ["functions/*"],
			"#utils/*": ["utils/*"],
			"#client": ["classes/Ryneczek.ts"],
			"#types/": ["types/*"],
			"#prisma": ["../prisma/generated/prisma/client"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["prisma/generated", "config.json"]
}
